@using NativeFileDialogs.Net
@using Sonorize.Core
@using Sonorize.Core.Services
@using Sonorize.Core.Services.Library
@using Sonorize.Core.Settings
@using Sonorize.Photino.Blazor.Components.Pages.SettingsSections.Components
@inject SonorizeSettings AppSettings
@inject ISettingsManager<SonorizeSettings> SettingsManager
@inject LibraryService LibraryService

<div class="settings-view-container">

    <!-- Display Options -->
    <div class="settings-card">
        <div class="card-header">
            <span class="card-title">Grid Display</span>
            <span class="card-desc">Customize card size and spacing</span>
        </div>
        <div class="card-content">
            <div class="slider-stack">
                <SettingsSlider Label="Card Width" @bind-Value="GridWidth" Min="100" Max="400" Step="10" DefaultValue="180" />
                <SettingsSlider Label="Grid Gap" @bind-Value="GridGap" Min="0" Max="60" Step="4" DefaultValue="24" />
                <SettingsSlider Label="Card Padding" @bind-Value="GridPadding" Min="0" Max="40" Step="4" DefaultValue="16" />
            </div>
        </div>
    </div>

    <!-- Library Folders -->
    <div class="settings-card">
        <div class="card-header">
            <span class="card-title">Music Sources</span>
            <span class="card-desc">Manage watched folders</span>
        </div>
        <div class="card-content">
            <label class="toggle-row">
                <span class="toggle-label">Scan library on application startup</span>
                <input type="checkbox" @bind="ScanOnStartup" class="toggle-input" />
            </label>

            <div class="divider"></div>

            <div class="folder-list">
                @if (!AppSettings.Library.MusicFolderPaths.Any())
                {
                    <div class="empty-state">
                        <i class="fas fa-folder-open"></i>
                        <span>No music folders added yet.</span>
                    </div>
                }
                @foreach (var path in AppSettings.Library.MusicFolderPaths)
                {
                    <div class="folder-item">
                        <span class="folder-icon"><i class="fas fa-folder"></i></span>
                        <span class="folder-path" title="@path">@path</span>
                        <button class="btn-remove" @onclick="() => RemoveFolder(path)" title="Remove folder">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                }
            </div>

            <button class="btn btn-outline" @onclick="AddFolder">
                <i class="fas fa-plus"></i> Add Folder...
            </button>
        </div>
    </div>

    <!-- Extensions -->
    <div class="settings-card">
        <div class="card-header">
            <span class="card-title">File Extensions</span>
            <span class="card-desc">Manage supported audio formats</span>
        </div>
        <div class="card-content">
            <FileExtensionSettings />
        </div>
    </div>

</div>