@using Sonorize.Core.Settings
@using Sonorize.Core.Services
@inject SonorizeSettings AppSettings
@inject ISettingsManager<SonorizeSettings> SettingsManager

<SettingsCard Title="Layout & Geometry" Description="Panel positions and element shapes">
    <!-- Positioning -->
    <div class="control-grid-row">
        <div class="control-col">
            <span class="col-label">Player Bar Position</span>
            <select class="form-control dropdown" @bind="PlayerBarPos">
                <option value="@PlayerBarPosition.Bottom">Bottom</option>
                <option value="@PlayerBarPosition.Top">Top</option>
            </select>
        </div>
        <div class="control-col">
            <span class="col-label">Sidebar Position</span>
            <select class="form-control dropdown" @bind="SidebarPos">
                <option value="@SidebarPosition.Left">Left</option>
                <option value="@SidebarPosition.Right">Right</option>
            </select>
        </div>
    </div>

    <div class="divider"></div>

    <div class="slider-stack">
        <SettingsSlider Label="Corner Radius" @bind-Value="BorderRadiusInt" Min="0" Max="24" Step="1" Unit="px" ShowNumberInput="false" />
        <SettingsSlider Label="Player Bar Height" @bind-Value="PlayerBarHeightInt" Min="60" Max="150" Step="2" Unit="px" />
    </div>

    <div class="divider"></div>

    <div class="checkbox-grid">
        <label><input type="checkbox" checked="@AppSettings.Theme.UsePillButtons" @onchange="@(e => UpdateBool(v => AppSettings.Theme.UsePillButtons = v, e))" /> Pill-Shaped Buttons</label>
        <label><input type="checkbox" checked="@AppSettings.Theme.EnableAmbientBackground" @onchange="@(e => UpdateBool(v => AppSettings.Theme.EnableAmbientBackground = v, e))" /> Ambient Background</label>
        <label><input type="checkbox" checked="@AppSettings.Theme.EnableCustomScrollbars" @onchange="@(e => UpdateBool(v => AppSettings.Theme.EnableCustomScrollbars = v, e))" /> Custom Scrollbars</label>
    </div>
</SettingsCard>

<div style="margin-top: 24px;"></div>

<SettingsCard Title="Typography">
    <div class="control-group">
        <span class="group-label">Font Family</span>
        <input type="text" class="form-control dropdown full-width"
               @bind-value="AppSettings.Theme.CustomFontFamily"
               @bind-value:event="oninput"
               @bind-value:after="Save"
               placeholder="Default (System UI)" />
    </div>
    <div style="margin-top: 15px;">
        <SettingsSlider Label="Base Size" @bind-Value="BaseFontSizeInt" Min="10" Max="24" Step="1" Unit="px" ShowNumberInput="false" />
    </div>
</SettingsCard>

<style>
    .control-grid-row {
        display: flex;
        gap: 20px;
    }

    .control-col {
        flex: 1;
    }

    .col-label {
        font-size: 0.85em;
        color: var(--text-secondary);
        display: block;
        margin-bottom: 6px;
        font-weight: 600;
    }

    /* Softened dark background for inputs */
    .dropdown {
        padding: 8px;
        background-color: rgba(0, 0, 0, 0.2);
        color: var(--text-primary);
        border: 1px solid var(--border-color);
        border-radius: 4px;
        width: 100%;
    }

    .full-width {
        width: 100%;
    }

    .slider-stack {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .divider {
        height: 1px;
        background-color: var(--border-color);
        margin: 15px 0;
        opacity: 0.5;
    }

    .checkbox-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
        gap: 10px;
    }

        .checkbox-grid label {
            display: flex;
            align-items: center;
            gap: 8px;
            cursor: pointer;
            color: var(--text-primary);
            font-size: 0.95em;
        }

        .checkbox-grid input {
            accent-color: var(--accent-primary);
            transform: scale(1.1);
            cursor: pointer;
        }

    .group-label {
        display: block;
        font-weight: 600;
        color: var(--text-secondary);
        font-size: 0.9em;
        margin-bottom: 10px;
        text-transform: uppercase;
    }
</style>

@code {
    private PlayerBarPosition PlayerBarPos { get => AppSettings.Theme.PlayerBarPosition; set { AppSettings.Theme.PlayerBarPosition = value; Save(); } }
    private SidebarPosition SidebarPos { get => AppSettings.Theme.SidebarPosition; set { AppSettings.Theme.SidebarPosition = value; Save(); } }
    private int BorderRadiusInt { get => AppSettings.Theme.BorderRadius; set { AppSettings.Theme.BorderRadius = value; Save(); } }
    private int PlayerBarHeightInt { get => AppSettings.Theme.PlayerBarHeight; set { AppSettings.Theme.PlayerBarHeight = value; Save(); } }
    private int BaseFontSizeInt { get => AppSettings.Theme.BaseFontSize; set { AppSettings.Theme.BaseFontSize = value; Save(); } }

    private void UpdateBool(Action<bool> updateAction, ChangeEventArgs e) { updateAction((bool)(e.Value ?? false)); Save(); }
    private void Save() => SettingsManager.Save(AppSettings);
}