@page "/settings"
@using Sonorize.Photino.Blazor.Components.Pages.SettingsSections
@inject NavigationManager Nav

<div class="settings-view">
    <div class="settings-header">
        <button class="back-btn header-action-btn" title="Back to library" @onclick="GoBack">
            <i class="fas fa-chevron-left"></i>
        </button>
        <h2>Settings</h2>
    </div>

    <div class="settings-tabs">
        <button class="tab-btn @(_activeTab == SettingsTab.General ? "active" : "")"
                @onclick="() => _activeTab = SettingsTab.General">
            General
        </button>

        <button class="tab-btn @(_activeTab == SettingsTab.Theme ? "active" : "")"
                @onclick="() => _activeTab = SettingsTab.Theme">
            Appearance
        </button>

        <button class="tab-btn @(_activeTab == SettingsTab.Library ? "active" : "")"
                @onclick="() => _activeTab = SettingsTab.Library">
            Library
        </button>

        <button class="tab-btn @(_activeTab == SettingsTab.Scrobbling ? "active" : "")"
                @onclick="() => _activeTab = SettingsTab.Scrobbling">
            Scrobbling
        </button>

        <button class="tab-btn @(_activeTab == SettingsTab.Advanced ? "active" : "")"
                @onclick="() => _activeTab = SettingsTab.Advanced">
            Advanced
        </button>
    </div>

    <div class="settings-content">
        @switch (_activeTab)
        {
            case SettingsTab.General:
                <GeneralTab />
                break;
            case SettingsTab.Theme:
                <ThemeTab />
                break;
            case SettingsTab.Library:
                <LibraryTab />
                break;
            case SettingsTab.Scrobbling:
                <ScrobblingTab />
                break;
            case SettingsTab.Advanced:
                <AdvancedTab />
                break;
        }
    </div>
</div>

<style>
    .settings-tabs {
        display: flex;
        gap: 10px;
        margin-bottom: 24px;
        border-bottom: 1px solid var(--border-color);
        padding-bottom: 0;
    }

    .tab-btn {
        background: none;
        border: none;
        color: var(--text-secondary);
        padding: 10px 20px;
        cursor: pointer;
        font-size: 14px;
        font-weight: bold;
        border-bottom: 2px solid transparent;
        transition: color 0.2s, border-color 0.2s;
    }

        .tab-btn:hover {
            color: var(--text-primary);
        }

        .tab-btn.active {
            color: var(--accent-primary);
            border-bottom-color: var(--accent-primary);
        }

    .settings-content {
        animation: fadeIn 0.2s ease-in-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(5px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

@code {
    private enum SettingsTab { General, Theme, Library, Scrobbling, Advanced }
    private SettingsTab _activeTab = SettingsTab.General;

    private void GoBack() => Nav.NavigateTo("/");
}