@page "/focus"
@using Sonorize.Core.Services
@using Sonorize.Core.Services.Audio
@using Sonorize.Core.Services.System
@using Sonorize.Core.Settings
@implements IDisposable
@inject IPlayerService PlayerService
@inject SonorizeSettings AppSettings
@inject ISettingsManager<SonorizeSettings> SettingsManager
@inject ImageAnalysisService ImageAnalysis

<!-- Inject style to force transparency on the main content container ONLY for this page -->
<style>
    .main-content {
        background: transparent !important;
        box-shadow: none !important;
    }
</style>

<div class="@ContainerClass">
    <div class="focus-art-wrapper">
        @if (_artSrc is not null)
        {
            <img src="@_artSrc" alt="Album Art" />
        }
        else
        {
            <div class="focus-placeholder">
                <i class="fas fa-music"></i>
            </div>
        }
    </div>

    <div class="focus-info">
        <h1 class="focus-title">@(_currentSong?.Title ?? "Ready to Play")</h1>
        <h2 class="focus-artist">@(_currentSong?.Artist ?? "Sonorize")</h2>
        @if (_currentSong is not null)
        {
            <p class="focus-album">@_currentSong.Album</p>
        }
    </div>
</div>