@page "/focus"
@using Sonorize.Core.Services
@using Sonorize.Core.Services.Audio
@using Sonorize.Core.Services.System
@using Sonorize.Core.Settings
@implements IDisposable
@inject IPlayerService PlayerService
@inject SonorizeSettings AppSettings
@inject ISettingsManager<SonorizeSettings> SettingsManager
@inject ImageAnalysisService ImageAnalysis

<!-- Inject style to force transparency on the main content container ONLY for this page -->
<style>
    .main-content {
        background: transparent !important;
        box-shadow: none !important;
    }
</style>

<div class="@ContainerClass">
    <div class="focus-art-wrapper">
        @if (_artSrc is not null)
        {
            <img src="@_artSrc" alt="Album Art" />
        }
        else
        {
            <div class="focus-placeholder">
                <i class="fas fa-music"></i>
            </div>
        }
    </div>

    <div class="focus-info">
        <h1 class="focus-title">@(_currentSong?.Title ?? "Ready to Play")</h1>
        <h2 class="focus-artist">@(_currentSong?.Artist ?? "Sonorize")</h2>
        @if (_currentSong is not null)
        {
            <p class="focus-album">@_currentSong.Album</p>
        }
    </div>
</div>

@code {
    private string? _artSrc;
    private Sonorize.Core.Models.Song? _currentSong;
    private bool _isBackgroundBright = false;

    private string ContainerClass => $"focus-container {(_isBackgroundBright ? "adaptive-dark-text" : "")}";

    protected override void OnInitialized()
    {
        PlayerService.PlaybackStateChanged += OnStateChanged;
        PlayerService.QueueChanged += OnStateChanged;
        SettingsManager.SettingsSaved += OnStateChanged;
        UpdateState();
    }

    private async void OnStateChanged()
    {
        await InvokeAsync(async () =>
        {
            await UpdateState();
            StateHasChanged();
        });
    }

    private async Task UpdateState()
    {
        var song = PlayerService.CurrentSong;
        if (song == _currentSong && _currentSong is not null) return; // Debounce if song hasn't changed

        _currentSong = song;

        if (_currentSong is not null && _currentSong.HasArt)
        {
            var encodedPath = Uri.EscapeDataString(_currentSong.FilePath);
            _artSrc = $"sonorize://albumart/?path={encodedPath}";

            // Analyze brightness using C# Service
            // We use the raw FilePath, as the service reads the file directly
            _isBackgroundBright = await ImageAnalysis.IsAlbumArtBrightAsync(_currentSong.FilePath);
        }
        else
        {
            _artSrc = null;
            _isBackgroundBright = false;
        }
    }

    public void Dispose()
    {
        PlayerService.PlaybackStateChanged -= OnStateChanged;
        PlayerService.QueueChanged -= OnStateChanged;
        SettingsManager.SettingsSaved -= OnStateChanged;
    }
}